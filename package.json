{
  "name": "task-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:client": "vue-cli-service serve src/client/main.ts",
    "dev:server": "kill-port --port 9229 && TS_NODE_PROJECT='tsconfig.server.json' debugMode=true node -r ts-node/register --inspect=127.0.0.1:9229 -r tsconfig-paths/register src/server/main.ts",
    "dev:adminScript": "kill-port --port 9229 && TS_NODE_PROJECT='tsconfig.server.json' node -r ts-node/register --inspect-brk=127.0.0.1:9229 -r tsconfig-paths/register src/adminScripts/pm2Script.ts",
    "build:client": "vue-cli-service build src/client/main.ts --clearcache",
    "build:server": "tslint --config tslint.json --project tsconfig.server.json && TS_NODE_PROJECT='tsconfig.server.json' node -r ts-node/register -r tsconfig-paths/register build/buildServer.ts",
    "build:all": "cnpm run build:client && cnpm run build:server && cnpm run prodPackage",
    "prodInstall": "cnpm install --production --no-optional",
    "prodPackage": "rm taskManager.tar.gz && tar -cvzf taskManager.tar.gz dist/*",
    "deploy": "scp taskManager.tar.gz root@114.67.130.155:/task-manager"
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.4",
    "express-mung": "^0.5.1",
    "http-status-codes": "^1.3.0",
    "moment": "^2.22.2",
    "mongodb": "^3.1.10",
