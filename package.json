    "multer": "^1.4.1",
    "node-cache": "^4.2.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^5.1.1",
    "ora": "^3.0.0",
    "pm2": "^3.2.4",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/cookie-parser": "^1.4.1",
